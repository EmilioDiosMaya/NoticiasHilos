<Window x:Class="NoticiasHilos_Cliente.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoticiasHilos_Cliente"
        mc:Ignorable="d"
        Title="MainWindow" Height="448.632" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Image Height="100" Source="img/noticias.png"/>
            <Label Content="Noticias" HorizontalAlignment="Center" FontFamily="Roboto" FontSize="24" Margin="0,10,0,0"/>
            <StackPanel>
                <Button x:Name="btn_iniciar" Content="Iniciar" Width="75" Click="Click_btn_iniciar"/>
                <Button x:Name="btn_salir" Content="Salir" Width="75" Click="Click_btn_salir"/>
            </StackPanel>
            <Rectangle Fill="CadetBlue" Height="7" Margin="0,10"/>
            <TextBox x:Name="tb_noticias" TextWrapping="Wrap" Text="" AcceptsReturn="True" AcceptsTab="True" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Auto" Height="179"/>
        </StackPanel>
    </Grid>
</Window>
